# LiteLLM Configuration
# The URL of your LiteLLM proxy server
LITELLM_URL=http://localhost:4000

# Optional: API key for LiteLLM authentication
LITELLM_API_KEY=

# Model to use for the agents (e.g., gpt-3.5-turbo, gpt-4, claude-3-opus, etc.)
LITELLM_MODEL=gpt-3.5-turbo

# Server Configuration
# Port for the JAF server (default: 3001)
PORT=3001

# Memory Provider Configuration (optional)
# Type of memory provider: memory (default), redis, postgres
JAF_MEMORY_TYPE=memory

# Redis Configuration (if JAF_MEMORY_TYPE=redis)
JAF_REDIS_HOST=localhost
JAF_REDIS_PORT=6379
JAF_REDIS_PASSWORD=
JAF_REDIS_DB=0

# PostgreSQL Configuration (if JAF_MEMORY_TYPE=postgres)
JAF_POSTGRES_HOST=localhost
JAF_POSTGRES_PORT=5432
JAF_POSTGRES_DB=jaf_memory
JAF_POSTGRES_USER=postgres
JAF_POSTGRES_PASSWORD=
JAF_POSTGRES_SSL=false

# Or use a connection string instead
# JAF_POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/jaf_memory